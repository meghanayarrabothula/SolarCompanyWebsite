<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Solar Solutions</title>
    <link rel="stylesheet" href="~/css/styles.css" />
</head>
<body>
    <!-- Header Section with Navigation Links -->
    <header>
        <h1>Solar Solutions</h1>
        <nav>
            <a href="~/Home/Index">Home</a>
            <a href="~/Home/About">About Us</a>
            <a href="~/Location/SolarEstimate">Solar Estimate</a>
            
            <a href="~/Home/Contact">Feedback</a>
        </nav>
    </header>

    <!-- Main Content Section -->
    <main>
        @RenderBody() <!-- The content of each view will be injected here -->
    </main>

    <!-- Footer Section 
    <footer>
        <p>&copy; @DateTime.Now.Year Solar Solutions. All rights reserved.</p>
    </footer> -->

    @if (ViewBag.CustomFooter == true)
    {
        <!-- Custom footer for specific pages -->
        <footer class="custom-footer">
            © Your Company - Custom Footer for Solar Data Estimate
        </footer>
    }
    else if (ViewBag.CustomFooter != false) // Skip footer if CustomFooter is explicitly set to false

    {
        <!-- Default footer -->
        <footer class="site-footer">
            <p>&copy; @DateTime.Now.Year Solar Solutions. All rights reserved.</p>
        </footer>
    }

 

    <!-- Additional Scripts (if needed for specific page functionality) -->
    @RenderSection("Scripts", required: false)
</body>
</html>